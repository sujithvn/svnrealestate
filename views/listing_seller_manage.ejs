<%- include('includes/_head.ejs') %>


<body>

    <!-- Navbar -->
    <%- include('includes/_navbar.ejs') %>

    <% const showcase_inner = {} %>
    <% showcase_inner.title = "Seller Dashboard" %>
    <% showcase_inner.detail = "Manage your sVn Real Estate account" %>
    <%- include('includes/_showcase_inner.ejs', {showcase_inner: showcase_inner}) %>


    <!-- Breadcrumb -->
    <section id="bc" class="mt-3">
        <div class="container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="/">
                            <i class="fas fa-home"></i> Home</a>
                    </li>
                    <li class="breadcrumb-item active"> Seller Dashboard</li>
                </ol>
            </nav>
        </div>
    </section>

    <section id="dashboard" class="py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-9">
                            <h2>Welcome USER</h2>
                            <p>Here are the property listings that you have uploaded </p>
                        </div>
                        <div class="col-3">
                            <a class="btn btn-dark" href="/list/listing_edit/">Add New Property</a>
                        </div>
                    </div>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Property Id</th>
                                <th scope="col">Property Details</th>
                                <th scope="col">Property Edit</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if(listings && listings.length > 0) { %>
                                <% for (let listing of listings) { %> 
                                    <tr>
                                        <td><%= listing.id %></td>
                                        <td><%= listing.title %>, <%= listing.address %>, <%= listing.city %>,
                                            <%= listing.state %>, <%= listing.zipcode %>
                                        </td>
                                        <td>
                                            <a class="btn btn-light" href="/list/listing_edit/?listId=<%= listing.id %>">Edit Listing</a>
                                        </td>
                                    </tr>
                                <% } %> 
                            <% } else { %>
                                <h3>No properties uploaded by you...</h3>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
    <!-- Bottombar -->
    <%- include('includes/_bottombar.ejs') %>

    <!-- Footer -->
    <%- include('includes/_footer.ejs') %>