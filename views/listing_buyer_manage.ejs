<%- include('includes/_head.ejs') %>


<body>

    <!-- Navbar -->
    <%- include('includes/_navbar.ejs') %>

    <% const showcase_inner = {} %>
    <% showcase_inner.title = "Buyer Dashboard" %>
    <% showcase_inner.detail = "Manage your sVn Real Estate account" %>
    <%- include('includes/_showcase_inner.ejs', {showcase_inner: showcase_inner}) %>


    <!-- Breadcrumb -->
    <section id="bc" class="mt-3">
        <div class="container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="/">
                            <i class="fas fa-home"></i> Home</a>
                    </li>
                    <li class="breadcrumb-item active"> Buyer Dashboard</li>
                </ol>
            </nav>
        </div>
    </section>

    <section id="dashboard" class="py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-9">
                            <h2>Welcome USER</h2>
                            <p>Here are the property listings that you have inquired </p>
                        </div>
                    </div>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Property Id</th>
                                <th scope="col">Property Title</th>
                                <th scope="col">Message</th>
                                <th scope="col">Inquired Date</th>
                                <th scope="col">Block Payment ?</th>
                                <th scope="col">Block Payment ID</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if(inquiries && inquiries.length > 0) { %>
                                <% for (let inquiry of inquiries) { %> 
                                    <tr>
                                        <td><%= inquiry.listingId %></td>
                                        <td><a href="/list/listing_detail?lid=<%= inquiry.listingId %>"><%= inquiry.listing.title %></a> </td>
                                        <td><%= inquiry.message %></td>
                                        <td><%= (inquiry.contact_date) ? moment(inquiry.contact_date).format(shortDateFormat) : "Not yet inquired" %></td>
                                        <td><%= inquiry.blocked ? "Yes" : "No" %></td>
                                        <td><%= inquiry.blockID %> </td>
                                        <% console.log(inquiry) %> 
                                    </tr>
                                <% } %> 
                            <% } else { %>
                                <h3>No properties inquired by you...</h3>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
    <!-- Bottombar -->
    <%- include('includes/_bottombar.ejs') %>

    <!-- Footer -->
    <%- include('includes/_footer.ejs') %>